<ul class="media-list">
  <% unless items.blank? %>
  <% items.each do |item| %>
    <li class="media">
      <div class="media-body">
        <div>
          <%= item.user.name %> <span class="text-muted">posted at <%= item.created_at %></span>
        </div>
        <div>
          <h3><%= link_to item.name, item_path(item) %></h3>
          <%= image_tag(item.picture.thumb100.url) if item.picture.present? %>
          <p><%= item.content %></p>
        </div>
        <div>
          <% if current_user == item.user %>
            <% @item = item.id %>
            
            <%= link_to "Edit", edit_item_path(item) , class: 'btn btn-danger btn-xs' %>
            <%= link_to "Delete", item, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <% end %>
  
</ul>